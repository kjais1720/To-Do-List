
<%- include ('header') -%>
    <div class="box" id='heading'>
        <h1><%=typeOfList%> </h1>
    </div>

    <div class="box">
        <% items.forEach((i)=>{ %>
        <form action="/delete" method="post">
            <div class="item">
                <input onchange="this.form.submit()" name='taskId' type="checkbox" value=<%=i._id%> >
                <p><%=i.name%></p>
            </div>
            <input type="hidden" name="listName" value='<%=typeOfList%>'>
        </form>
        <% }) %>
        
        <form action="/" method="post">
            <input name = 'job'type="text" placeholder="Next task" autocomplete="off" autofocus>
            <button type="submit" name = 'button' value='<%=typeOfList%>'>+</button>
        </form>
    </div>

<%- include ('footer') -%>
